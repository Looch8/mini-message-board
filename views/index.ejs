<html>
	<body>
		<h1><%= title %></h1>

		<!--  Link to new message form -->
		<a href="/new">New Message</a>

		<% for (let i = 0; i < messages.length; i++) { %>

		<ul>
			<li><strong>Message:</strong> <%= messages[i].text %></li>
			<li><strong>User: </strong><%= messages[i].user %></li>
			<li><strong>Date: </strong><%= messages[i].added %></li>
		</ul>

		<% } %>
	</body>
</html>
